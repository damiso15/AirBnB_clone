.filters {
	display: flex;
	align-items: center;
        padding: 10px;
        border: 1px solid #DDDDDD;
        border-radius: 4px;
}

.locations, .amenities {
        display: inline-block;
        height: 100%;
        width: 25%;
}

.locations {
        border-right: 1px solid #DDDDDD;
}

.popover li {
	list-style: none;
}
.popover h2 {
  font-size: 16px;
  margin-bottom: 5px;
}

.popover ul {
  margin-top: 5px;
  margin-left: 20px;
}

.locations h3, .amenities h3 {
        font-weight: 600;
}

.locations h4, .amenities h4 {
        font-weight: 400;
        font-size: 14px;
}

.locations h3, .locations h4, .amenities h3, .amenities h4 {
        margin: 0;
        margin-top: 10px;
        margin-left: 40px;
}

.locations:hover .popover, .amenities:hover .popover {
  display: block;
}

.popover {
	display: none;
	position: absolute;
	top: 100%;
	left: 0;
	padding: 10px;
	color: #FAFAFA;
	width: 100%;
	border: 1px solid #DDDDDD;
	border-radius: 4px;
}

button {
        background-color: #FF5A5F;
        color: #FFFFFF;
        height: 48px;
        width: 20%;
        top: 50%;
        border: none;
        border-radius: 4px;
        font-size: 18px;
        position: relative;
        margin-top: 11px;
        margin-bottom: 11px;
        transform: translateX(140%);
}

button:hover {
        opacity: 0.9;
}
